doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Librería - Búsqueda Avanzada
    link(rel="stylesheet" href="/css/vendedor.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    header
      a.btn.btn-succes(type="button", href="/")
        svg(xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-box-arrow-in-left" viewBox="0 0 16 16")
            path(fill-rule="evenodd", d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0z")
            path(fill-rule="evenodd", d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708z")
            | Salir  
      h1 Librería Punto de Venta
    main
      section.search
        h2 Búsqueda Avanzada
        form(action="/vendedor" method="POST")
          .form-group
            label(for="title") Título
            input(type="text" id="title" name="title" placeholder="Buscar por título")
          .form-group
            label(for="author") Autor
            input(type="text" id="author" name="author" placeholder="Buscar por autor")
          .form-group
            label(for="isbn") ISBN
            input(type="text" id="isbn" name="isbn" placeholder="Buscar por ISBN")
          .form-group
            label(for="publisher") Editorial
            input(type="text" id="publisher" name="publisher" placeholder="Buscar por editorial")
          .form-group
            label(for="subject") Materia
            input(type="text" id="subject" name="subject" placeholder="Buscar por materia")
          button(type="submit") Buscar
      section.results
        h2 Resultados
        if results && results.length > 0
          ul.book-list
            each book in results
              li.book-item
                h3= book.book_name
                p
                  strong Autor:
                  | #{book.book_author}
                p
                  strong ISBN:
                  | #{book.book_isbn}
                p
                  strong Editorial:
                  | #{book.book_editorial}
                p
                  strong Materia:
                  | #{book.book_genre}
                p
                  strong Disponibilidad:
                  if book.book_amount > 1
                    span.available Disponible
                  else
                    span.unavailable No disponible
        else
          p No se encontraron resultados
    
